<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#80000000"
        android:layout_marginTop="18dp"
        android:text="Nota" />

    <EditText
        android:id="@+id/resolucion_nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/resolucion_puntos_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#80000000"
        android:layout_marginTop="18dp"
        android:text="Puntos" />

    <EditText
        android:id="@+id/resolucion_puntos"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:inputType="number"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_importe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Importe ($)"/>
        <RadioButton android:id="@+id/radio_uf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unidades fijas"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#80000000"
        android:layout_marginTop="18dp"
        android:id="@+id/resolucion_value_label"
        android:text="Importe" />

    <EditText
        android:id="@+id/resolucion_value"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:inputType="number"/>

</LinearLayout>