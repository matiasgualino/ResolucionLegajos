<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/legajo_cardGrid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_row="0"
    android:layout_column="0"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/legajo_cardTitle"
            android:padding="16dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:text="Nro: 9999999/1 - Sergio Matias Gualino"/>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/grid_legajo_metaData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:columnCount="6"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <TextView
                android:layout_column="0"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_row="1"
                android:text="Dominio: " >
            </TextView>
            <TextView
                android:layout_column="1"
                android:layout_gravity="left"
                android:textColor="#fff"
                android:layout_row="1"
                android:text="GGG455"
                android:id="@+id/legajo_cardDominio">
            </TextView>

            <TextView
                android:layout_column="2"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_row="1"
                android:text="Fecha: " >
            </TextView>
            <TextView
                android:layout_column="3"
                android:layout_gravity="left"
                android:textColor="#fff"
                android:layout_row="1"
                android:text="01/01/2015"
                android:id="@+id/legajo_cardFecha">
            </TextView>

            <TextView
                android:layout_column="4"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_row="1"
                android:text="DU: " >
            </TextView>
            <TextView
                android:layout_column="5"
                android:layout_gravity="left"
                android:textColor="#fff"
                android:layout_row="1"
                android:text="3"
                android:id="@+id/legajo_cardDU">
            </TextView>

        </GridLayout>

        <View
            android:id="@+id/legajo_cardDivider"
            android:layout_below="@id/legajo_cardGrid"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/legajo_cardSelectButton"
            android:clickable="true"
            android:onClick="seleccionarLegajo"
            android:focusable="false"
            android:padding="16dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_gravity="right"
            android:textAlignment="gravity"
            android:text="SELECCIONAR"/>


    </LinearLayout>

</android.support.v7.widget.CardView>